<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:background="@color/grey"

        app:layout_constraintBottom_toTopOf="@+id/beh3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Zvolte sport"
            android:textColor="@color/white"
            android:textSize="30sp"></TextView>


    </androidx.appcompat.widget.Toolbar>

    <Button
        android:id="@+id/beh"
        android:layout_width="0dp"
        android:layout_height="96dp"


        android:layout_marginStart="6dp"

        android:layout_marginEnd="8dp"
        android:text="Hromadný"
        app:backgroundTint="@color/purple_500"
        app:backgroundTintMode="add"
        app:cornerRadius="?attr/listPreferredItemPaddingEnd"
        app:layout_constraintBaseline_toBaselineOf="@+id/beh3"
        app:layout_constraintEnd_toStartOf="@+id/beh3"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/beh3"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginEnd="4dp"

        android:layout_marginBottom="552dp"
        android:onClick="poStisknuti"
        android:text="Průběžný"

        app:backgroundTint="@color/purple_500"
        app:backgroundTintMode="add"
        app:cornerRadius="?attr/listPreferredItemPaddingEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/beh"
        app:layout_constraintTop_toBottomOf="@+id/toolbar3" />

</androidx.constraintlayout.widget.ConstraintLayout>